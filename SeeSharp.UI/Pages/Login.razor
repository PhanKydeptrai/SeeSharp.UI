    }

    .custom-checkbox .form-check-input {
    width: 1.1em;
    height: 1.1em;
    border-radius: 4px;
    border: 1px solid #adb5bd;
    }

    .custom-checkbox .form-check-input:checked {
    background-color: var(--bs-primary);

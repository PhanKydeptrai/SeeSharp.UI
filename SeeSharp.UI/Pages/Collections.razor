@page "/collections"
@page "/collections/{category}"

<PageTitle>Bộ sưu tập gọng kính</PageTitle>

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Bộ lọc sản phẩm</h5>
                </div>
                <div class="card-body">
                    <h6 class="border-bottom pb-2">Danh mục</h6>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="men">
                        <label class="form-check-label" for="men">
                            Gọng kính nam
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="women">
                        <label class="form-check-label" for="women">
                            Gọng kính nữ
                        </label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" value="" id="luxury">
                        <label class="form-check-label" for="luxury">
                            Thương hiệu cao cấp
                        </label>
                    </div>

                    <h6 class="border-bottom pb-2 pt-3">Khoảng giá</h6>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="price1">
                        <label class="form-check-label" for="price1">
                            Dưới 1.000.000đ
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="price2">
                        <label class="form-check-label" for="price2">
                            1.000.000đ - 2.000.000đ
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="price3">
                        <label class="form-check-label" for="price3">
                            2.000.000đ - 3.000.000đ
                        </label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" value="" id="price4">
                        <label class="form-check-label" for="price4">
                            Trên 3.000.000đ
                        </label>
                    </div>

                    <h6 class="border-bottom pb-2 pt-3">Thương hiệu</h6>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="brand1">
                        <label class="form-check-label" for="brand1">
                            Ray-Ban
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="brand2">
                        <label class="form-check-label" for="brand2">
                            Gucci
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="brand3">
                        <label class="form-check-label" for="brand3">
                            Oakley
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="brand4">
                        <label class="form-check-label" for="brand4">
                            Prada
                        </label>
                    </div>

                    <button class="btn btn-primary w-100 mt-3">Áp dụng</button>
                </div>
            </div>
        </div>

        <!-- Product Listing -->
        <div class="col-md-9">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Bộ sưu tập gọng kính</li>
                </ol>
            </nav>

            <!-- Sort and View Options -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="m-0">@(string.IsNullOrEmpty(@Category) ? "Tất cả sản phẩm" : CategoryTitle)</h3>
                <div class="d-flex">
                    <select class="form-select me-2">
                        <option selected>Sắp xếp theo</option>
                        <option value="price-low-high">Giá: Thấp đến cao</option>
                        <option value="price-high-low">Giá: Cao đến thấp</option>
                        <option value="newest">Mới nhất</option>
                        <option value="best-selling">Bán chạy</option>
                    </select>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-grid-3x3-gap-fill"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-list"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="row">
                @for (int i = 1; i <= 12; i++)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 product-card">
                            <div class="position-relative">
                                <img src="https://placehold.co/300x200" class="card-img-top" alt="Kính mẫu @i">
                                @if (i % 3 == 0)
                                {
                                    <span class="badge bg-danger position-absolute top-0 end-0 m-2">Sale</span>
                                }
                                @if (i % 5 == 0)
                                {
                                    <span class="badge bg-success position-absolute top-0 start-0 m-2">Mới</span>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">Gọng kính model @i</h5>
                                <p class="text-muted small">SKU: KM@(1000 + i)</p>
                                @if (i % 3 == 0)
                                {
                                    <p class="card-text">
                                        <span class="text-decoration-line-through">@(1500000 + i * 100000)đ</span>
                                        <span class="text-danger ms-2 fw-bold">@(1200000 + i * 100000)đ</span>
                                    </p>
                                }
                                else
                                {
                                    <p class="card-text">@(1200000 + i * 100000)đ</p>
                                }
                                <div class="text-warning mb-2">
                                    @for (int j = 0; j < 5; j++)
                                    {
                                        if (j < (i % 5 + 3))
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                    <span class="text-muted ms-1">(@(10 + i))</span>
                                </div>
                                <div class="mt-auto d-flex">
                                    <a href="/product/@i" class="btn btn-sm btn-outline-primary flex-grow-1 me-2">Xem chi tiết</a>
                                    <button class="btn btn-sm btn-primary">
                                        <i class="bi bi-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <nav aria-label="Product pagination" class="my-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Trước</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Sau</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? Category { get; set; }

    private string CategoryTitle => Category switch
    {
        "men" => "Gọng kính nam",
        "women" => "Gọng kính nữ",
        "luxury" => "Thương hiệu cao cấp",
        _ => "Tất cả sản phẩm"
    };
} 